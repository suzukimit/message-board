<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>
  
<%= form_for(Message.new) do |f| %>
  <div class="form-group">
    <div class="row">
      <div class="col-xs-1 col-sm-1 col-md-1">
        <label for="message_body" class="control-label">名前</label>
        </div>
        <div class="col-xs-4 col-sm-4 col-md-4">
          <%= f.text_area :name, size: "40x1", class: "form-control", placeholder: "名前を書いて下さい" %>
        </div>
      </div>
      <div class="row" style="margin-top: 20px; margin-bottom: 20px;">
        <div class="col-xs-1 col-sm-1 col-md-1">
          <label for="message_body" class="control-label">内容</label>
        </div>
        <div class="col-xs-6 col-sm-6 col-md-6">
          <%= f.text_area :body, size: "40x5", class: "form-control", placeholder: "メッセージを書いて下さい" %>
        </div>
      </div>
    <div>
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>