<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
    <% @messages.each do |message| %>
      <div class="row">
        <div class="col-md-2 col-sm-2 col-xs-2 label label-info"><%= message.name %> (<%= message.age %>)</div>
        <div class="col-md-8 col-sm-6 col-xs-6"><%= message.body %></div>
        <div class="col-md-1 col-sm-2 col-xs-2">(<%= link_to "edit" , edit_message_path(message) %>)</div>
        <div class="col-md-1 col-sm-2 col-xs-2">(<%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>)</div>
      </div>
    <% end %>
  </div>
</div>
  
<%= render 'form' %>