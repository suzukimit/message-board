<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="message_name" class="col-xs-1 col-sm-1 col-md-1 control-label">名前</label>
    <div class="col-xs-4 col-sm-4 col-md-4">
      <%= f.text_area :name, size: "40x1", class: "form-control", placeholder: "名前を書いて下さい" %>
    </div>
  </div>
  <div class="form-group">
    <label for="message_age" class="col-xs-1 col-sm-1 col-md-1 control-label">年齢</label>
    <div class="col-xs-4 col-sm-4 col-md-4">
      <%= f.text_area :age, size: "40x1", class: "form-control", placeholder: "年齢を書いて下さい" %>
    </div>
  </div>
  <div class="form-group">
    <label for="message_body" class="col-xs-1 col-sm-1 col-md-1 control-label">内容</label>
    <div class="col-xs-6 col-sm-6 col-md-6">
      <%= f.text_area :body, size: "40x5", class: "form-control", placeholder: "メッセージを書いて下さい" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sx-offset-1 col-sm-offset-1 col-md-offset-1 col-sx-4 col-sm-4 col-md-4">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>